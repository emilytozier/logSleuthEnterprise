input {
  # Input из Kafka
  kafka {
    bootstrap_servers => "kafka:9092"
    topics => ["raw-logs"]
    group_id => "logstash-group"
    codec => json
    auto_offset_reset => "earliest"
    consumer_threads => 3
  }

  # Input из TCP (для прямого подключения приложений)
  tcp {
    port => 5000
    codec => json_lines
  }
}

filter {
  # Добавляем timestamp если его нет
  if [timestamp] {
    date {
      match => [ "timestamp", "ISO8601" ]
      target => "@timestamp"
    }
  } else {
    date {
      match => [ "@timestamp", "ISO8601" ]
    }
  }

  # Добавляем hostname
  mutate {
    add_field => {
      "logstash_host" => "%{host}"
      "processed_by" => "logstash"
    }
  }

  # Парсинг уровня лога
  if [level] {
    mutate {
      lowercase => [ "level" ]
    }
  }

  # Генерация id для документа
  if ![id] {
    uuid {
      target => "[@metadata][document_id]"
    }
  } else {
    mutate {
      add_field => { "[@metadata][document_id]" => "%{id}" }
    }
  }
}

output {
  # Output в Elasticsearch
  elasticsearch {
    hosts => ["elasticsearch:9200"]
    index => "logs-%{+YYYY.MM.dd}"
    document_id => "%{[@metadata][document_id]}"
    user => "elastic"
    password => "${ELASTIC_PASSWORD}"
    ssl_certificate_verification => false
  }

  # Output в stdout для дебага
  stdout {
    codec => rubydebug
  }

  # Output в файл (опционально)
  file {
    path => "/usr/share/logstash/data/logs/log-%{+YYYY-MM-dd}.log"
    codec => line { format => "%{message}" }
  }
}
